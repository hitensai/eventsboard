<header>
	<h1><%= @user.organization_name %> 's Events organized</h1>


	<ul>
		
		<li> <%= link_to "Strat Event", new_event_path, class: "new" %></li>
	</ul>
</header>

<%  if @user.events.any? %>
	<table class="table table-stripped">
		<thead>
			<tr>
				<th>Title</th>
				<th>start date</th>
				<th>End date</th>
				<th>Event Status</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @user.organized_events.reverse.each do |event|%>
			<tr>
				<td><%=link_to event.title, event_path(event) %></td>
					<td><%= time_format(event.start_date)%></td>
					<td><%= time_format(event.end_date) %></td>
					<td><%= event_status(event) %></td>
					<td>
						<%=link_to "Edit", edit_event_path(event) %>
					</td>
					<td><%=link_to "Delete", event_path(event), method: :delete, data: {confirm: "Are you sure?"}, class: "delete" %></td>
				

			</tr>
			<% end %>
		</tbody>		
	</table>
<% else %> 
<p> <%= @user.organization_name %> has no events yet</p>	
<% end %>