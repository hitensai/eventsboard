<% if event.errors.any? %>
   <div id="Error Explanation">
   <h2><%= pluralize(event.errors.count, "error") %> Prohibited this Event from being created</h2>
   <ul>
      <% @event.errors.full_messages.each do |i| %>
           <li> <%= i %> </li>
      <% end %>
   </ul>
    </div>
<% end %>

<%= simple_form_for(event) do |f| %>
   <%= f.input :title %>
   <%= f.input :description %>
  <%= f.input :start_date, as: :datetime, start_year: Date.today.year, ampm: true, order: [:day, :month,:year] %>
  <%= f.input :end_date, as: :datetime, end_year: Date.today.year, ampm: true, order: [:day, :month,:year] %>
   
   <%= f.input :venue %>
   <%= f.input :location %>
   

   <%= f.button :submit, class: "btn btn-primary" %>
    
   


<% end %>

